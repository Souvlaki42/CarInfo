<h1><%= Translator.translate("Register") %></h1>
<%- include("./_messages.ejs") %>
<form action="/register" method="post">
	<div class="form-group">
		<label class="required" for="username"><%= Translator.translate("Username") %></label>
		<input value="<%= typeof username != "undefined" ? username : "" %>" type="text" autocomplete="username" name="username" id="username" class="form-control" placeholder="<%= Translator.translate("Enter your username") %>">
	</div>
	<div class="form-group">
		<label class="required" for="email">Email</label>
		<input value="<%= typeof email != "undefined" ? email : "" %>" type="email" name="email" id="email" autocomplete="username" class="form-control" placeholder="<%= Translator.translate("Enter your email") %>">
	</div>
    <div class="form-group">
        <label class="required" for="phone"><%= Translator.translate("Telephone Number") %></label>
        <input value="<%= typeof phone != "undefined" ? phone : "" %>" type="text" name="phone" id="phone" class="form-control" placeholder="<%= Translator.translate("Enter your telephone number") %>">
    </div>
	<div class="form-group">
		<label class="required" for="password"><%= Translator.translate("Password") %></label>
		<input value="<%= typeof password != "undefined" ? password : "" %>" type="password" autocomplete="new-password" name="password" id="password" class="form-control" placeholder="<%= Translator.translate("Enter your secret password") %>">
		<i class="fas fa-eye pass-change" id="togglePass"></i>
	</div>
	<div class="form-group">
		<label class="required" for="password2"><%= Translator.translate("Confirm Password") %></label>
		<input value="<%= typeof password2 != "undefined" ? password2 : "" %>" type="password" autocomplete="new-password" name="password2" id="password2" class="form-control" placeholder="<%= Translator.translate("Enter your secret password again") %>">
		<i class="fas fa-eye pass-change" id="togglePass2"></i>
	</div>
	<button type="submit" class="btn btn-primary"><%= Translator.translate("Register") %></button>
	<p class="d-inline ml-3"><%= Translator.translate("Already a member?") %> <a href="/login"><%= Translator.translate("Login") %></a></p>
</form>