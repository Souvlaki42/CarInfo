<h1>Register</h1>
<%- include("./partials/messages") %>
<form action="/register" method="post">
	<div class="form-group">
		<label for="username">Username</label>
		<input required value="<%= typeof username != "undefined" ? username : "" %>" type="text" name="username" id="username" class="form-control" placeholder="Enter your username">
	</div>
	<div class="form-group">
		<label for="email">Email</label>
		<input required value="<%= typeof email != "undefined" ? email : "" %>" type="email" name="email" id="email" class="form-control" placeholder="Enter your email">
	</div>
	<div class="form-group">
		<label for="password">Password</label>
		<input required value="<%= typeof password != "undefined" ? password : "" %>" type="password" name="password" id="password" class="form-control" placeholder="Enter your secret password">
        <i class="fas fa-eye" id="togglePass" onclick="togglePassword()"></i>
	</div>
	<div class="form-group">
		<label for="password2">Confirm Password</label>
        <input required value="<%= typeof password2 != "undefined" ? password2 : "" %>" type="password" name="password2" id="password2" class="form-control" placeholder="Enter your secret password again">
        <i class="fas fa-eye" id="togglePass2" onclick="togglePassword2()"></i>
	</div>

	<button type="submit" class="btn btn-primary">Register</button>
	<a href="/login" class="btn btn-secondary">Login</a>
</form>