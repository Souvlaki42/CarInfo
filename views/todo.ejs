<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Car Info</title>
	<link rel="stylesheet" href="./todo.css">
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js" defer></script>
	<script src="./todo.js" defer></script>
	<link rel="icon" type="image/png" href="https://i.ibb.co/TggM4Wm/souvlaki42.png"/>
</head>
<body class="light">
	<div class="container">
		<div class="calendar">
			<div class="calendar-header">
				<span class="month-picker" id="month-picker">February</span>
				<div class="year-picker">
					<span class="year-change" id="prev-year">
						<pre><</pre>
					</span>
					<span id="year">2021</span>
					<span class="year-change" id="next-year">
						<pre>></pre>
					</span>
				</div>
			</div>
			<div class="calendar-body">
				<div class="calendar-week-day">
					<div><%= Translator.translate("Mon") %></div>
					<div><%= Translator.translate("Tue") %></div>
					<div><%= Translator.translate("Wed") %></div>
					<div><%= Translator.translate("Thu") %></div>
					<div><%= Translator.translate("Fri") %></div>
					<div><%= Translator.translate("Sat") %></div>
					<div><%= Translator.translate("Sun") %></div>
				</div>
				<div class="calendar-days"></div>
			</div>
			<div class="calendar-footer">
				<div class="toggle">
					<span><%= Translator.translate("Dark Mode") %></span>
					<div class="dark-mode-switch">
						<div class="dark-mode-switch-ident"></div>
					</div>
				</div>
			</div>
			<div class="month-list"></div>
		</div>
		<div class="todoMain">
			<div class="todoHeader">
				<h2 id="todoTitle">Todo List <0,0></h2>
				<input type="text" id="todoInput" placeholder="Add a new todo">
				<span onclick="" class="todoAddBtn">Add</span>
			</div>
			<ul class="todoList">
                <% const finalTodos = JSON.parse(todos); %>
                <% for (let todo of finalTodos) { %>
                    <li class="todoListItem"><%= todo %><span class="close"></span></li>
                <% } %>    
            </ul>
		</div>
	</div>
</body>
</html>