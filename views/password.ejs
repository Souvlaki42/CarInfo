<h1><%= Translator.translate("Change Password") %></h1>
<%- include("./partials/messages") %>
<form action="/password" method="post">
	<div class="form-group">
		<label class="required" for="email">Email</label>
		<input value="<%= typeof email != "undefined" ? email : "" %>"  autocomplete="username" type="email" name="email" id="email" class="form-control" placeholder="<%= Translator.translate("Enter your email") %>">
	</div>
	<div class="form-group">
		<label class="required" for="password"><%= Translator.translate("Password") %></label>
		<input value="<%= typeof password != "undefined" ? password : "" %>" type="password" autocomplete="new-password" name="password" id="password" class="form-control" placeholder="<%= Translator.translate("Enter your secret password") %>">
		<i class="fas fa-eye pass-change" id="togglePass" onclick="togglePassword1()"></i>
	</div>
	<div class="form-group">
		<label class="required" for="password2"><%= Translator.translate("Confirm Password") %></label>
		<input value="<%= typeof password2 != "undefined" ? password2 : "" %>" type="password" autocomplete="new-password" name="password2" id="password2" class="form-control" placeholder="<%= Translator.translate("Enter your secret password again") %>">
		<i class="fas fa-eye pass-change" id="togglePass2" onclick="togglePassword2()"></i>
	</div>
	<button type="submit" class="btn btn-primary"><%= Translator.translate("Change Password") %></button>
    <p class="d-inline ml-3"><%= Translator.translate("Did you remember him?") %> <a href="/login"><%= Translator.translate("Cancel") %></a></p>
</form>