<h1><%= Translator("Login") %></h1>
<%- include("./_messages.ejs") %>
<form action="/login" method="post">
	<div class="form-group">
		<label class="required" for="email">Email</label>
		<input value="<%= typeof email != "undefined" ? email : "" %>" autocomplete="username" type="email" name="email" id="email" class="form-control" placeholder="<%= Translator("Enter your email") %>">
	</div>
	<div class="form-group">
		<label class="required" for="password"><%= Translator("Password") %></label>
		<input value="<%= typeof password != "undefined" ? password : "" %>"  autocomplete="current-password" type="password" name="password" id="password" class="form-control" placeholder="<%= Translator("Enter your secret password") %>">
	</div>
    <p><a href="/password" class="i-link"><%= Translator("Forgot Password?") %></a></p>
	<button type="submit" class="btn btn-primary"><%= Translator("Login") %></button>
    <p class="d-inline ml-3"><%= Translator("Not a member?") %> <a href="/register"><%= Translator("Register") %></a></p>
</form>