<h1><%= Translator.translate("Login") %></h1>
<%- include("./_messages.ejs") %>
<form action="/login" method="post">
	<div class="form-group">
		<label class="required" for="email">Email</label>
		<input value="<%= typeof email != "undefined" ? email : "" %>" autocomplete="username" type="email" name="email" id="email" class="form-control" placeholder="<%= Translator.translate("Enter your email") %>">
	</div>
	<div class="form-group">
		<label class="required" for="password"><%= Translator.translate("Password") %></label>
		<input value="<%= typeof password != "undefined" ? password : "" %>"  autocomplete="current-password" type="password" name="password" id="password" class="form-control" placeholder="<%= Translator.translate("Enter your secret password") %>">
        <i class="fas fa-eye pass-change" id="togglePass"></i>
	</div>
    <p><a href="/password" class="i-link"><%= Translator.translate("Forgot Password?") %></a></p>
	<button type="submit" class="btn btn-primary"><%= Translator.translate("Login") %></button>
    <p class="d-inline ml-3"><%= Translator.translate("Not a member?") %> <a href="/register"><%= Translator.translate("Register") %></a></p>
</form>