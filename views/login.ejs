<h1>Login</h1>
<%- include("./partials/messages") %>
<form action="/login" method="post">
	<div class="form-group">
		<label for="email">Email</label>
		<input required value="<%= typeof email != "undefined" ? email : "" %>" type="email" name="email" id="email" class="form-control" placeholder="Enter your email">
	</div>
	<div class="form-group">
		<label for="password">Password</label>
		<input required value="<%= typeof password != "undefined" ? password : "" %>" type="password" name="password" id="password" class="form-control" placeholder="Enter your secret password">
        <i class="fas fa-eye" id="togglePass" onclick="togglePassword()"></i>
	</div>
	<button type="submit" class="btn btn-primary">Login</button>
	<a href="/register" class="btn btn-secondary">Register</a>
</form>