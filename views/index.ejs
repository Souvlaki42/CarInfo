<h1>Welcome <%= user.username %>!<a href="/logout" class="btn btn-info ml-2">Logout</a><a href="/account?_method=DELETE" class="btn btn-danger ml-2">Delete Account</a></h1>
<form action="/shortUrls" method="post" class="my-4 form-inline">
	<label for="longUrl" class="sr-only">Url</label>
	<input required type="url" name="longUrl" id="longUrl" value="https://" class="form-control col mr-2">
	<button type="submit" class="btn btn-success">Shrink</button>
</form>
<table class="table table-striped ">
	<thead>
		<tr>
			<th>Long Url</th> 
			<th>Short Url</th>
            <th>Created At</th>
			<th>Clicks</th>
		</tr>
	</thead>
	<tbody>
		<% shortUrls.filter(shortUrl => shortUrl.email === user.email).forEach(shortUrl => { %>
			<tr>
				<td><a href="<%= shortUrl.long %>"><%= shortUrl.long %></a></td>
				<td><a href="<%= shortUrl.short %>"><%= shortUrl.short %></a></td>
                <td><%= shortUrl.createdAt.toLocaleDateString() %></td>
				<td><%= shortUrl.clicks %></td>
                <td><a class="btn btn-danger ml-4" href="/<%= shortUrl.short %>/?_method=DELETE">Delete</a></td>
			</tr>
		<% }); %> 
	</tbody>
</table>